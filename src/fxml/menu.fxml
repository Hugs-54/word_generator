<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerMenu">
  <menus>
    <Menu mnemonicParsing="false" text="File">
      <items>
            <MenuItem disable="true" mnemonicParsing="false" text="Save project" />
        <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <items>
            <MenuItem mnemonicParsing="false" onAction="#createOutuputFile" text="Create an output file" />
        <MenuItem mnemonicParsing="false" onAction="#selectOutuputFile" text="Select the output file" />
      </items>
    </Menu>
      <Menu mnemonicParsing="false" text="Settings">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#setMaxAuthorizeWords" text="Change max words" />
            <MenuItem mnemonicParsing="false" onAction="#setMaxAuthorizeLetter" text="Change max letter" />
        </items>
      </Menu>
  </menus>
</MenuBar>
