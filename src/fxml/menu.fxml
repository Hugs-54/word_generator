<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerMenu">
  <menus>
    <Menu mnemonicParsing="false" text="File">
      <items>
            <MenuItem mnemonicParsing="false" onAction="#newProject" text="New project" />
            <MenuItem mnemonicParsing="false" onAction="#openProject" text="Open project" />
            <MenuItem mnemonicParsing="false" onAction="#saveProject" text="Save project" />
            <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <items>
            <MenuItem mnemonicParsing="false" onAction="#createOutputFile" text="Create an output file" />
        <MenuItem mnemonicParsing="false" onAction="#selectOutuputFile" text="Select the output file" />
      </items>
    </Menu>
  </menus>
</MenuBar>
